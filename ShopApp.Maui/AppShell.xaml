<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopApp.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShopApp.Maui"
    xmlns:views="clr-namespace:ShopApp.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ShopApp.Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryView}"
        Route="Inventory" />

    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:ShopView}"
        Route="Shop" />
    
    <ShellContent
        Title="AddItem"
        ContentTemplate="{DataTemplate views:AddItemView}"
        Route="AddItem" />
    


</Shell>
